/**app.wxss**/
/**第一功能  通用有边框**/
.bdr::after {
  content: "";
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #ccc;
}

/**第二功能  通用灰色分割块**/
.divider {
  height: 20rpx;
  background-color: #F4F6F6;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.03) inset;
}

.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/**第三功能  通用右侧小箭头**/
.arrow::after {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}

/**第四功能  打分系统**/
.shop-start {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.start-after {
  color: #e2e2e2;
}

.start-before {
  color: #ff9900;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}

/**第五功能  超出文字隐藏**/
.ell {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/**第六功能  加载更多**/
.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100px;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40px;
  height: 40px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(-360deg);
  }
}
/*显示隐藏*/
.show{
  display: block;
}
.hide{
  display: none;
}