/*导航下拉菜单*/
.nav{
  display: flex;
}
.nav>view{
  width: 50%;
  text-align: center;
  font-size: 16px;
  color:#B3B5B5;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.p-10{
  padding: 0 10rpx;
  display: inline-block;
  transition: 0.5s;
  transform-origin: 50% 50%;
}
.up{
  transform: rotate(180deg);
}
.selhard{
  display: flex;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between;
  font-size: 16px;
  padding: 20rpx;
}
.selhard image{
  width: 40rpx;
  height: 40rpx;
}
.active{
  color: #00D087;
}
/*tabbar变化样式*/
.totop{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #BFC2C7;
  text-align: center;
  font-size: 10px;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.totop image{
  width: 50rpx;
  height: 50rpx;
}