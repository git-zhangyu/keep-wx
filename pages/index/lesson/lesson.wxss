/*导航下拉菜单*/
.sel{
  height: 0;
  overflow: hidden;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}
.showSlow {
  position: fixed;
  top: 80rpx;
  left: 0;
  height: 540rpx;
  transition: 0.5s ease;
}
.nav{
  display: flex;
  position: fixed;
  width: 100%;
  z-index: 10;
  background: #fff;
}
.nav>view{
  width: 50%;
  text-align: center;
  font-size: 16px;
  color:#B3B5B5;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}
.p-10{
  padding: 0 10rpx;
  display: inline-block;
  transition: 0.5s;
  transform-origin: 50% 50%;
}
.up{
  transform: rotate(180deg);
}
.selhard{
  display: flex;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between;
  font-size: 16px;
  padding: 20rpx;
}
.selhard image{
  width: 40rpx;
  height: 40rpx;
}
.active{
  color: #00D087;
}
.traBody{
  font-size: 12px;
  color:#B3B5B5;
  padding: 20rpx 10rpx;
}
.bodySle{
  font-size:14px;
  color: #5A4F63;
  display: flex;
  flex-wrap: wrap;
}
.bodySle>view{
  width: 18%;
  background-color: #eee;
  border-radius: 20rpx;
  text-align: center;
  padding: 8rpx 16rpx;
  margin: 16rpx 10rpx;
  line-height: 1.2;
}
 .bodySle>view.selBg{
  background-color: #00D087;
  color: #fff;
}
.selBtn{
  padding: 16rpx;
  display: flex;
  font-size: 16px;
  justify-content: space-between;
}
.selBtn>view{
  color:#00D087;
  text-align: center;
  width: 48%;
  padding: 10rpx 0;
  margin: 20rpx 0;
  border-radius: 40rpx;
  border: 1px solid #00D087;
}
.selBtn>view:last-child {
  color: #fff;
  background-color: #00D087;
}
/*课程循环样式*/
.lesson-container{
  margin-top:90rpx ;
  margin-bottom: 110rpx;
}
.lesson-box{
  position: relative;
}
.lesson-image{
  width: 95%;
  height: 240rpx;
  margin: 10rpx 20rpx;
  z-index: 1;
}
.lesson-info{
  color: #fff;
  font-size: 10px;
  position: absolute;
  width: 95%;
  height: 240rpx;
  margin: 10rpx 20rpx;
  top: 0;
  left: 0;
  z-index: 3;
}
.subtitle{
  font-size: 24px;
  position: absolute;
  top:30rpx;
  left: 20rpx;
  z-index: 3;
}
.train-num{
  color: #eee;
  position: absolute;
  top:100rpx;
  left:20rpx;
  z-index: 3;
}
.train-hard{
  position: absolute;
  bottom: 30rpx;
  left: 20rpx;
  z-index: 3;
}
.train-hard>text:nth-child(1),.train-hard>text:nth-child(3){
  font-size: 14px;
  padding-right: 10rpx;
}
.train-hard>text:nth-child(2){
  padding-right:20rpx ;
}
.mask1{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0,0,0,0.2);
  left: 0;
  top: 0;
  z-index: 2;
}
.mask2{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 4;
}
/*tabbar变化样式*/
.totop{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 10px;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.totop image{
  width: 50rpx;
  height: 50rpx;
}