}

.font_bold {
  font-weight: 600;
}
.span_text {
  width: 150rpx;
  height: 50rpx;
  text-align: center;
}
.more_font {
  font-size: 14px;
  text-align: center;
  padding-top: 20rpx;
  color: #584F60;
}